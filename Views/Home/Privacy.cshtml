@{
    ViewData["Title"] = "Privacy";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <script src="~/js/site.js" type="text/javascript"></script>
    <link rel="stylesheet" href="~/css/PrivacyStyle.css"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
</head>
<body>
    <h2>Пользователи</h2>
   <div class="container">
       <div class="row">
            <div class="col-xs-12 text-center">
                <p>Список пользователей:</p>
                <table >
                    <thead><tr><th>Имя</th><th>Пароль</th><th>Роль</th><th></th></tr></thead>
                    <tbody id="tusers">
                    </tbody>
                </table>

            </div>
       </div>
        <div class="row">
            <div class="col-xs-4">
                <p>Добавление пользователя:</p>
                
                <input type="hidden" id="userId" />

                <p>
                    Имя:<br />

                    
                    <input id="userName" class="ustala"/>
                        
                </p>
                <p>
                    Пароль:<br />
                    <input id="userPassword" class="ustala" />
                </p>
                <p>
                    Роль:<br />
                    <select id="userRole" class="ustala">
                        <option>-</option>
                    </select>
                </p>
                <p>
                    <button id="saveBtn">Сохранить</button>
                    <button id="resetBtn">Сбросить</button>
                    <button onclick="CreateRol()">Изменить роль</button>

                </p>
            </div>
           
        </div>
        <div class="row">
            <div class="col-xs-4">
                <p>Поиск пользователя:</p>
                <div class="search-form" id="searchUser">
                    <input class="search-form_txt" id="searchUserT" type="text" placeholder="Искать..">
                    <button class="search-form_btn" id="searchBtn" type="button">
                    <img  src="~/image/img.png"
                         width="10 px" height="10 px"
                         alt="image">
                </button>
                </div>
                <p>Найденные пользователи:</p>
                <table id="Tsusers">
                    <thead><tr><th>Имя</th><th>Пароль</th><th>Роль</th><th></th></tr></thead>
                    <tbody id="susers">
                    </tbody>
                </table>
            </div>
            
        </div>
        
   </div>
    <script type="text/javascript" src="~/js/PrivacyJS.js"></script>

</body>
</html>